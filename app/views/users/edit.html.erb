<div class = "container">
  <div class = "row">
    <div class = "col-lg-5 mx-auto">
      <h2>User info</h2>
      <%= render "layouts/error_form",model: @user %>
      <%= form_with model:@user,local:true do |f| %>
        <div class = "form-group">
          <label for="name">Name</label>
          <%= f.text_field :name,autofocus: true,id:"name",placeholder:"名前",class: "form-control" %>
        </div>
        <div class = "form-group">
          <label for="image">Image</label>
          <%= f.attachment_field :profile_image,placeholder:"プロフィール画像",class: "form-control-file" %>
        </div>
        <div class = "form-group">
          <label for="intro">Introduction</label>
          <%= f.text_area :introduction,autofocus: true,id:"intro",placeholder:"自己紹介文",class: "form-control" %>
        </div>
        <%= f.submit "Update User",class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>