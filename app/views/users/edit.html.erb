<h2>User info</h2>
<%= render "layouts/error_form",model: @user %>
<%= form_with model:@user,local:true do |f| %>
  <label for="name">Name</label>
  <%= f.text_field :name,autofocus: true,id:"name",placeholder:"名前" %>
  <label for="image">Image</label>
  <%= f.attachment_field :profile_image,placeholder:"プロフィール画像" %>
  <label for="intro">Introduction</label>
  <%= f.text_area :introduction,autofocus: true,id:"intro",placeholder:"自己紹介文" %>
  <%= f.submit "Update User" %>
<% end %>