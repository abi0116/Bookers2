<%= render "layouts/error_form",model: @user %>
<%= render "user_info",user: @user %>
<%= render "books/new",book: @book %>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th><h4>Title</h4></th>
      <th><h4>Opinion</h4></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <td><%= attachment_image_tag book.user,:profile_image,:fill,100,100,format: "jpeg",fallback: "no_image.jpg" %></td>
    <td><%= link_to book.title,book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tbody>
  <% end %>
</table>