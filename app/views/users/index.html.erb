<div class="container">
  <div class="row">
    <div class = "col-md-3">
      <%= render "layouts/error_form",model: @user %>
      <%= render "user_info",user: @user %>
      <%= render "books/new",book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class = "table table-hover">
        <thead>
          <tr>
            <th><h4>image</h4></th>
            <th><h4>name</h4></th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <td><%= attachment_image_tag user,:profile_image,:fill,50,50,format: "jpeg",fallback: "no_image.jpg",size: "50x50" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show",user_path(user.id) %></td>
          </tbody>
        <% end %>
      </table>
    </end>
  </end>
</end>