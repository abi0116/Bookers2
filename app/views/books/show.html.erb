<%= render "layouts/error_form",model: @book %>
<%= render "users/user_info",user: @user %>
<%= render "new",book: @new %>
<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag @user,:profile_image,:fill,100,100,format: "jpeg",fallback: "no_image.jpg" %><br>
        <%= link_to @user.name, user_path(@user) %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @user.id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to "Destroy", book_path(@book),method: :delete,"data-confirm" => "Are you sureï¼Ÿ" %></td>
      <% end %>
    </tr>
  </tbody>
</table>