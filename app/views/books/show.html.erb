<div class="container">
  <div class="row">
    <div class = "col-md-3">
      <%= render "layouts/error_form",model: @book %>
      <%= render "users/user_info",user: @user %>
      <%= render "new",book: @new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class = "table table-hover">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @user,:profile_image,:fill,50,50,format: "jpeg",fallback: "no_image.jpg",size: "50x50" %><br>
              <%= link_to @user.name, user_path(@user) %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book),class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book),method: :delete,"data-confirm" => "Are you sureï¼Ÿ",class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </end>
  </end>
</end>